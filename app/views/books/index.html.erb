
<h1>BOOKS</h1>
<table>
<tr>
  <th>Title</th>
  <th>Body</th>
</tr>
<% @books.each do |list| %>

<tr>
  <td><%= list.title %></td>
  <td><%= list.body %></td>
  <td><%=link_to "Show",book_path(list)%></td>
  <td><%=link_to "Edit",book_path(list)%></td>
  <td><%=link_to "Destroy",book_path(list),  method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
  </tr>
<% end %>
</table>


<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create book' %>



<% end %>
